Header add Access-Control-Allow-Origin "*"
Header add Access-Control-Allow-Credentials true
Header add Access-Control-Allow-Headers "authorization, origin, user-token, x-requested-with, content-type"
Header add Access-Control-Allow-Methods "PUT, GET, POST, DELETE, OPTIONS"

<FilesMatch ".(ico|pdf|flv|jpg|jpeg|png|webp|svg|gif|js|css|swf)$">
    Header set Cache-Control "max-age=31556926, public"
</FilesMatch>

<FilesMatch "\.(ttf|otf|eot|woff|woff2)$">
  <IfModule mod_headers.c>
    Header add Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
    Header set Access-Control-Allow-Origin "*"
    Header set Cache-Control "max-age=31556926, public"
  </IfModule>
</FilesMatch>

# Memory Limit
php_value memory_limit 256M
php_value post_max_size 20M
php_value upload_max_filesize 20M

DirectoryIndex root.php
RewriteEngine on

RewriteCond %{HTTPS} on
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^ https://%1%{REQUEST_URI} [R=301,L]

# Append Slash to Query String
RewriteCond %{THE_REQUEST} robots\.txt
RewriteRule (.*)\.txt$ robots/%{HTTP_HOST}.txt [L]

# Rewrite to root.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule !^root\.php$ root.php [L,NC]
